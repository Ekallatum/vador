{
  "name": "vador",
  "version": "1.2.2",
  "description": "rest client",
  "dependencies": {
    "lodash": "^3.9.3",
    "normalize-url": "^1.2.0",
    "superagent": "^1.2.0",
    "superagent-es6-promise": "^1.0.0"
  },
  "engine": "node >= 0.12.0",
  "devDependencies": {
    "babel": "^5.1.13",
    "babelify": "^6.0.2",
    "browserify": "^9.0.8",
    "minifyify": "^7.0.0"
  },
  "main": "build/node/index.js",
  "scripts": {
    "clean": "rm -rf build/* && mkdir  -p build/{node,browser}",
    "build-node": "babel -d build/node src/",
    "build-browser": "browserify src/index.js --standalone vador -t babelify > build/browser/vador.js",
    "build-browser-min": "browserify src/index.js -d -p [minifyify --no-map] --standalone vador -t babelify  > build/browser/vador.min.js",
    "build": "npm run clean && npm run build-node && npm run build-browser && npm run build-browser-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eyolas/vador.git"
  },
  "keywords": [
    "rest"
  ],
  "author": "David Touzet <dtouzet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eyolas/vador/issues"
  },
  "homepage": "https://github.com/eyolas/vador#readme"
}
